.page {
  padding: 35rpx 30rpx;
  padding-bottom: 135rpx;
}

.bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  box-shadow: 0rpx -1rpx 6rpx rgba(0,0,0,.1);
  box-sizing: border-box;
  z-index: 999;
  background-color: #fff;
  padding-left: 45rpx;
  padding-right: 45rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.home_wrap {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}
.home_wrap .home_txt {
  font-size: 22rpx;
  color: #777;
}
.home_wrap .iconfont {
  font-size: 44rpx;
  color: #fc7222;
}
.apply {
  width: 380rpx;
  height: 70rpx;
  border-radius: 35rpx;
  background-image: linear-gradient(to right, #fd5733, #fc7222);
  color: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 38rpx;
  font-weight: 600;
}

.date_wrap {
  padding-left: 8rpx;
  padding-right: 8rpx;
  color: #777;
  font-size: 28rpx;
  margin: 28rpx 0 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item_msg_title_wrap {
  color: #fc7222;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.line {
  width: 6rpx;
  height: 30rpx;
  background-color: #fc7222;
  margin-right: 20rpx;
}

.msg_title {
  font-size: 30rpx;
}

.img_item {
  margin-bottom: 40rpx;
  border-radius: 18rpx;
  overflow: hidden;
}

.msg_content {
  font-size: 30rpx;
  color: #222;
  margin: 8rpx 0;
  text-indent: 2em;
}

.user_info_wrap {
  height: 100rpx;
  display: flex;
  align-items: center;
}
.user_avatar {
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 40rpx;
}
.icon-xingbienv {
  color: #ff3ec9;
}
.icon-xingbienan {
  color: #75b9eb;
}
.username {
  font-weight: 600;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.author_contact_wrap {
  padding: 14rpx;
  display: flex;
  flex-direction: column;
}
.contact_item {
  padding: 14rpx 24rpx;
  border-radius: 28rpx;
  box-shadow: 0rpx 1rpx 5rpx rgba(0,0,0,.3);
  margin-top: 29rpx;
  display: flex;
  align-items: center;
}
.contact_item .iconfont {
  color: #fc7222;
}
.contact_txt {
  font-size: 30rpx;
  color: #777;
  margin-left: 14rpx;
}

.wraning {
  font-size: 30rpx;
  color: #333;
}