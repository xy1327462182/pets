.publish_page {
  min-height: 100vh;
  background-color: #f4f4f4;
  padding-left: 45rpx;
  padding-right: 45rpx;
  padding-top: 90rpx;
}

.publish_item {
  width: 100%;
  height: 180rpx;
  border-radius: 18rpx;
  background-image: linear-gradient(to top right,#f6e4d2,#ffffff);
  box-shadow: 0 3rpx 10rpx rgb(0 0 0 / 10%);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
}
.publish_item .iconfont {
  font-size: 90rpx;
  font-weight: 700;
}
.publish_txt {
  font-size: 46rpx;
  font-weight: 700;
  margin-left: 30rpx;
}
.icon-pets-copy {
  color: #e07b26;
}
.icon-fabu {
  color: #4a8af4;
}