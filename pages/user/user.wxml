<view class="user_page">
  <!-- 用户信息 -->
  <view class="user_info_wrap">
    <image class="user_avatar" mode="widthFix" src="{{userInfo.avatar}}"></image>
    <view class="username">
      <text class="nickname">{{userInfo.nickname}}</text>
      <text class="iconfont icon-xingbienv" wx:if="{{userInfo.sex==2}}"></text>
      <text class="iconfont icon-xingbienan" wx:if="{{userInfo.sex==1}}"></text>
    </view>
  </view>

  <!-- 用户功能 -->
  <view class="user_list">
    <view class="list_item">
      <view class="title_wrap">
        <text class="iconfont icon-pets-copy"></text>
        <text class="title_txt">我的领养</text>
      </view>
      <view class="iconfont icon-jiantou"></view>
    </view>
    <view class="list_item">
      <view class="title_wrap">
        <text class="iconfont icon-fabu"></text>
        <text class="title_txt">我发布的百科</text>
      </view>
      <view class="iconfont icon-jiantou"></view>
    </view>
    <view class="list_item">
      <view class="title_wrap">
        <text class="iconfont icon-dongtai"></text>
        <text class="title_txt">我发布的领养</text>
      </view>
      <view class="iconfont icon-jiantou"></view>
    </view>
  </view>

  <!-- 注销登录 -->
  <view class="logout">
    注销登录
  </view>
</view>
